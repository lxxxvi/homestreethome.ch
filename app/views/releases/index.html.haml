%ul.hsh-releases.flex.flex-wrap.-mx-2
  - @releases.each do |release|
    %li.hsh-release.w-full.px-2{ class: 'lg:w-1/3' }
      .flex.flex-wrap.p-5.hover:bg-gray-300.cursor-pointer{ data: { url: release_path(release) } }
        .w-full
          .ml-auto.mr-auto.mb-4
            = image_tag release.image_url, class: 'w-32'
          .leading-3.text-sm.text-gray-700
            = release.artist
        .w-full
          .text-xl.tracking-wide
            = link_to release.title, release_path(release)
        .w-full
          .leading-4.text-sm.text-gray-500
            = release.released_on
