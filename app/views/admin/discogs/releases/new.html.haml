.my-10
  %h1 Release from Discogs

.rounded-lg.border.border-gray-200.shadow-xl.bg-white.p-8
  = form_with model: @form do |f|
    .field.my-4
      = f.label :discogs_release_id, 'Discogs Release ID', class: 'block text-sm leading-5 tracking-wide text-gray-600'
      .mt-2
        = f.text_field :discogs_release_id, placeholder: 'e.g. 13923880', class: 'py-2 px-2 rounded border sm:text-sm sm:leading-5'
      - if @form.errors.key?(:discogs_release_id)
        .text-red-400.text-xs.mt-1
          = @form.errors.messages[:discogs_release_id].join(' and ')

    .actions.mt-6
      = f.submit nil, class: 'py-2 px-4 bg-green-700 text-green-100 rounded-lg hover:text-pink-100 hover:bg-pink-700 cursor-pointer'
      = link_to 'Back to releases', admin_releases_path, class: 'ml-3 text-gray-500'
